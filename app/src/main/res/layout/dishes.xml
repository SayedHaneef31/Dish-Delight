<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    android:elevation="4dp"
    android:backgroundTint="#D8F4D4"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:id="@+id/foodImageIdddd"
                android:src="@drawable/salad" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btnAddIddddddd"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="ADD"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white" />


                <LinearLayout
                    android:id="@+id/quantitySelector"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnMinusIdddd"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:text="−"
                        android:backgroundTint="#F44336"
                        android:padding="0dp"
                        android:includeFontPadding="false"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:id="@+id/quantityIddddd"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="1"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/btnPlusIddddd"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:backgroundTint="#F44336"
                        android:text="+"
                        android:padding="0dp"
                        android:includeFontPadding="false"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="end">

            <TextView
                android:text="Green Salad"
                android:textSize="21sp"
                android:textStyle="bold"
                android:id="@+id/foodNameIddddd"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="4.2 ⭐"
                android:textColor="#000000"
                android:textSize="16sp"
                android:id="@+id/foodRatingIddddd"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:id="@+id/foodPriceIddddd"
                android:text="₹ 250"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>




    </LinearLayout>
</com.google.android.material.card.MaterialCardView>